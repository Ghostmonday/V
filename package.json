{
  "name": "sinaps-mvp",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build && tsc -p tsconfig.build.json || true",
    "start": "node dist/server/index.js",
    "build:root": "tsc -p tsconfig.build.json",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:auth": "cypress run --spec 'cypress/e2e/auth-flow.cy.ts'",
    "test:e2e:auth:full": "./scripts/run-auth-e2e-tests.sh",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\" --ignore-path .prettierignore",
    "clean": "turbo clean && find . -name node_modules -type d -prune -exec rm -rf {} +",
    "validate": "turbo typecheck && turbo lint",
    "validate:phases-1-3": "tsx scripts/validate-phases-1-3.ts",
    "validate:phases-1-3:all": "./scripts/run-all-validations.sh",
    "validate:docker:up": "docker-compose -f docker-compose.validation.yml up -d",
    "validate:docker:down": "docker-compose -f docker-compose.validation.yml down",
    "validate:docker:setup": "./scripts/setup-validation-db.sh",
    "validate:docker:run": "./scripts/run-validation-docker.sh",
    "validate:docker:full": "npm run validate:docker:up && sleep 5 && npm run validate:docker:setup && npm run validate:docker:run",
    "stress-test": "tsx scripts/stress-test.ts",
    "bots": "tsx scripts/bots.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@sentry/node": "^10.25.0",
    "@signalapp/libsignal-client": "^0.86.4",
    "@types/cookie-parser": "^1.4.6",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.25",
    "@types/node-fetch": "^2.6.13",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "argon2": "^0.44.0",
    "cypress": "^15.6.0",
    "depcheck": "^1.4.7",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "knip": "^5.69.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.2.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3",
    "unimported": "^1.31.0",
    "vitest": "^1.2.0"
  },
  "overrides": {
    "livekit-server-sdk": "2.2.0",
    "@supabase/supabase-js": "2.38.1"
  },
  "lint-staged": {
    "**/.env": "echo '❌ Secret file found - aborting commit!' && exit 1",
    "**/.env.*": "echo '❌ Secret file found - aborting commit!' && exit 1",
    "**/*.env": "echo '❌ Secret file found - aborting commit!' && exit 1"
  },
  "dependencies": {
    "@types/web-push": "^3.6.4",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "web-push": "^3.6.7",
    "zod": "3.23.8"
  }
}