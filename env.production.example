# VibeZ Production Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY_DAYS=30

# ============================================
# API KEYS (stored in vault, fallback to env)
# ============================================
DEEPSEEK_API_KEY=your-deepseek-api-key
PERSPECTIVE_API_KEY=your-perspective-api-key
SENTIMENT_API_KEY=optional-sentiment-api-key

# ============================================
# MODERATION
# ============================================
MODERATION_WARN_THRESHOLD=0.6
MODERATION_BLOCK_THRESHOLD=0.8
BLOCKED_WORDS=word1,word2,word3

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MESSAGES_PER_30S=15
RATE_LIMIT_REQUESTS_PER_MIN=60

# ============================================
# MONITORING & ALERTING
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SENDGRID_API_KEY=your-sendgrid-api-key
ALERT_EMAIL=alerts@yourdomain.com
ALERT_THRESHOLD=10

# ============================================
# SENTIMENT ANALYSIS
# ============================================
SENTIMENT_CACHE_TTL_SECONDS=3600
SENTIMENT_ENABLED=true

# ============================================
# MESSAGE ARCHIVAL
# ============================================
HOT_RETENTION_DAYS=30
COLD_RETENTION_DAYS=365
ENABLE_MESSAGE_ARCHIVAL=true

# ============================================
# DATABASE MONITORING
# ============================================
ENABLE_DB_MONITORING=true
SLOW_QUERY_THRESHOLD_MS=1000

# ============================================
# SERVER CONFIG
# ============================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_PARTITION_MANAGEMENT=true
ENABLE_ROOM_EXPIRY=true
ENABLE_AI_MODERATION=true

